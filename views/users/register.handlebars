<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <h3 class="text-center">Account Register</h3>
      <form method="post" action="/users/register">
        <div class="form-group">
          <label for="name">Name</label>
          <input value="{{name}}" type="name" class="form-control" name="name" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input value="{{email}}" type="email" class="form-control" name="email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input value="{{password}}" type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input value="{{password2}}" type="password2" class="form-control" name="password2" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
